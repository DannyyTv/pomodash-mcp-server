{
  "name": "pomodash-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for PomoDash integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "docker:build": "docker build -t pomodash-mcp-server .",
    "docker:run": "docker run --rm -i --env-file .env pomodash-mcp-server",
    "docker:compose": "docker-compose up --build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "tsx": "^4.0.0"
  }
}